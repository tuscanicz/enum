{
    "name": "tuscanicz/enum",
    "description": "PHP implementation of Enum with strict comparisons",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "enum"
    ],
    "authors": [
        {
            "name": "Karel Štefan",
            "email": "dev@karelstefan.cz"
        },
        {
            "name": "Petr Bechyně",
            "email": "mail@petrbechyne.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-mbstring": "^7.4"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "phpstan/phpstan": "^0.12.18",
        "phpunit/phpunit": "^9.1",
        "slevomat/coding-standard": "^6.2"
    },
    "scripts": {
        "phpcs": "phpcs --standard=codesniffer-ruleset.xml --parallel=8 --extensions=php --encoding=utf-8 --tab-width=4 -sp src tests",
        "phpcbf": "phpcbf --standard=codesniffer-ruleset.xml --parallel=8 --extensions=php --encoding=utf-8 --tab-width=4 -sp src tests",
        "phpstan": "php vendor/phpstan/phpstan/phpstan.phar analyse -c phpstan.neon src tests --level 5 --no-progress",
        "phpunit": "php vendor/phpunit/phpunit/phpunit --testsuite=unit",
        "ci": [
            "@phpcs",
            "@phpstan",
            "@phpunit"
        ]
    },
    "autoload": {
        "psr-0": {
            "Enum": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "": "tests/"
        }
    },
    "replace": {
        "kstefan/enum": "self.version"
    },
    "conflict": {
        "kstefan/enum": "<=1.0"
    }
}
